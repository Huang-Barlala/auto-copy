{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "auto-copy",
  "version": "0.1.1",
  "identifier": "org.barlala.auto-copy",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "auto-copy",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/custom.png",
      "icons/favicon.ico",
      "icons/favicon-96x96.png"
    ]
  }
}